    <!-- search section end -->


    <!-- course section -->
    <section class="course-section spad">
        <div class="container">
            <div class="section-title mb-0">
                <h2>Wishlist Courses</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec malesuada lorem maximus mauris scelerisque, at rutrum nulla dictum. Ut ac ligula sapien. Suspendisse cursus faucibus finibus.</p>
            </div>
        </div>
        <div class="course-warp">
            <div class="row course-items-area">
                <!-- course -->
                {% for course in courses %}

                    <div class="mix col-lg-3 col-md-4 col-sm-6 finance">
                        <div class="course-item">
                            <div class="course-thumb set-bg" data-setbg="{{ asset('uploads/images/' ~ course.image) }}">
                                <div class="price">Price: {{ course.price }} </div>
                            </div>
                            <div class="course-info">
                                <div class="course-text">
                                    <a href="/courses/{{ course.id }}"><h5>{{ course.title }}</h5></a>
                                    <p>{{course.description}}</p>
                                  
                                </div>
                                <div class="course-author">
                                    <div class="ca-pic set-bg" data-setbg="{{asset('images/authors/1.jpg')}}"></div>
                                    <p>{{ course.author }}, <span>Developer</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- course section end -->








{% endblock %}
